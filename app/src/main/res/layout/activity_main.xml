<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="29sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <Button
                android:id="@+id/btn_all_clear"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_light_gray"
                android:onClick="Ac"
                android:text="AC" />

            <Button
                android:id="@+id/btn_plus_minus_sign"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_light_gray"
                android:onClick="btn_Operator"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_light_gray"
                android:onClick="Percent"
                android:text="%" />

            <Button
                android:id="@+id/btn_division"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_orange"
                android:onClick="btn_Operator"
                android:text="รท"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="9"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_cross"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_orange"
                android:onClick="btn_Operator"
                android:text="x"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="4"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="5"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="6"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_orange"
                android:onClick="btn_Operator"
                android:text="-"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_orange"
                android:onClick="btn_Operator"
                android:text="+"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="253dp">

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:onClick="btn_Click"
                android:text="0"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button14"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:text=","
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button15"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_space_dark"
                android:text="."
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_corners_orange"
                android:onClick="Equals"
                android:text="="
                android:textColor="#FFFFFF" />
        </TableRow>

    </TableLayout>
</LinearLayout>